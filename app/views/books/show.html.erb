<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info',user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image(100,100) %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
          <% if @book.favorited_by?(current_user) %>

    <td>
      <%= link_to book_favorites_path(@book), method: :delete do %>
        ♥<%= @book.favorites.count %> いいね
      <% end %>
    </td>
    <td>コメント件数：<%= @book.post_comments.count %></td>
    <% else %>
    <td>
      <%= link_to book_favorites_path(@book), method: :post do %>
        ♡<%= @book.favorites.count %> いいね
      <% end %>
    </td>
    <td>コメント件数：<%= @book.post_comments.count %></td>
  <% end %>
        </tr>

      </table>

<table>
  <% @book.post_comments.each do |post_comment| %>
   <tr>
    <td>
      <%= image_tag post_comment.user.get_profile_image(100,100) %><br>
      <%= link_to post_comment.user.name,user_path(post_comment.user) %>
    </td>
    <td><%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %></td>
    <% if post_comment.user == current_user %>
    <td><%= link_to "Destroy", book_post_comment_path(post_comment.book, post_comment), method: :delete, class: "btn btn-sm btn-danger" %></td>
    </tr>
    <% end %>
  <% end %>
</table>

      <div>
  <%= form_with model: [@book, @post_comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメント" %>
    <%= f.submit "送信" %>
  <% end %>
</div>

    </div>
  </div>
</div>