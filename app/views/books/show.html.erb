<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info',user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image(100,100) %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
          <td id="favorites_btn<%=@book.id%>">
            <%= render "favorites/favorites", book: @book %>
          </td>
          <td>コメント件数：<%= @book.post_comments.count %></td>
        </tr>
      </table>

      <table id = "comments_area">
        <%= render "post_comments/post_comments", book: @book %>
      </table>

      <div>
        <%= form_with model: [@book, @post_comment], local: false do |f| %>
          <%= f.text_area :comment, rows: '5', placeholder: "コメント" %>
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
</div>